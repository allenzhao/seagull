  <%= form_for student, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :student_number %>
      <%= f.text_field :student_number %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :sex %>
      <%= f.select :sex, enum_to_options(Student.sexes) %>
    </div>
    <div class="form-group">
      <%= f.label :school %>
      <%= f.select :school, enum_to_options(Student.schools) %>
    </div>
    <div class="form-group">
      <%= f.label :grade %>
      <%= f.text_field :grade %>
    </div>
    <div class="form-group">
      <%= f.label :student_class %>
      <%= f.text_field :student_class %>
    </div>
    <div class="form-group">
      <%= f.label :major %>
      <%= f.text_field :major %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.phone_field :phone_number %>
    </div>
    <div class="form-group">
      <%= f.label :dyned_class %>
      <%= f.text_field :dyned_class %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
        <%= f.submit '保存', {class: 'button small radius'} %>
    </div>
  <% end %>