<div class="widget-box issue-box">
  <div class="widget-header">
    <h4 class="widget-title lighter smaller">
      <i class="ace-icon fa fa-comment blue"></i>
      <%= issue.title %> - 最后更新于 <%= issue.updated_at %>
    </h4>
  </div>

  <div class="widget-body">
    <div class="widget-main no-padding">
      <div class="dialogs">
        <% issue.versions.each do |version| %>
            <div class="itemdiv dialogdiv">
              <div class="user">
                <%= image_tag('avatar2.png') %>
              </div>
              <div class="body">

                <div class="time">
                  <i class="ace-icon fa fa-clock-o"> </i>
                <span class="green">
                  <%= human_time version.created_at %>
                </span>
                </div>

                <div class="name">
                  <%= version.whodunnit.present? ? version.whodunnit : 'System' %> - <%= version.event %>
                </div>
                <div class="text">
                  <% version.changeset.each do |k, v| %>
                      <div class="issue-changes">
                        <span class="issue-key"><%= k %></span>
                      <span class="issue-value">
                        <span class="old"><%= v[0] %></span> =>
                        <span class="new"><%= v[1] %></span>
                      </span>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
        <% end %>

      </div>

    </div>
    <!-- /.widget-main -->
  </div>
  <!-- /.widget-body -->
</div><!-- /.widget-box -->