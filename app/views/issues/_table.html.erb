<table class="table">
  <thead>
  <tr>
    <th>标题</th>
    <th>描述</th>
    <th>负责人</th>
    <th>状态</th>
    <th>创建于</th>
    <th>更新于</th>
    <th colspan="2">操作</th>
  </tr>
  </thead>
  <tbody>
  <% issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description.truncate(20) %></td>
        <td><%= issue.team_member.full_name || '' %></td>
        <td><%= issue.status %></td>
        <td><%= issue.created_at.to_formatted_s(:short) %></td>
        <td><%= issue.updated_at.to_formatted_s(:short) %></td>
        <td>
          <%= link_to '更新', edit_issue_path(issue.id), data: {remote: true} %>
        </td>
        <td>
          <%= link_to '详情', issue_path(issue.id), data: {remote: true} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>