<div class="row login-container">
  <div class="large-8 large-centered columns">
    <div class="signup-panel">
      <div class="row">
        <div class="row flash">
          <%= devise_error_messages! %>
        </div>
        <div class="large-6 columns logo">
          <%= image_tag 'seagull.png' %>
          <p class="welcome"> 欢迎您注册 Seagull</p>
        </div>
        <div class="large-6 columns login">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="row collapse input-box">
              <div class="small-2 columns">
                <span class="prefix"><i class="fi-mail"></i></span>
              </div>
              <div class="small-10 columns">
                <%= f.email_field :email, {autofocus: true, placeholder: '请输入您的E-mail'} %>
              </div>
            </div>

            <div class="row collapse input-box">
              <div class="small-2 columns">
                <span class="prefix"><i class="fi-lock"></i></span>
              </div>
              <div class="small-10 columns">
                <%= f.password_field :password, {autocomplete: 'off', placeholder: "请输入密码,(不少于#{@minimum_password_length}个字符 )"} %>
              </div>
            </div>

            <div class="row collapse input-box">
              <div class="small-2 columns">
                <span class="prefix"><i class="fi-lock"></i></span>
              </div>
              <div class="small-10 columns">
                <%= f.password_field :password_confirmation, {autocomplete: 'off', placeholder: '请确认密码'} %>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-6 small-centered columns">
                <%= f.submit '注册', {class: 'button radius'} %>
              </div>
              <%= render 'devise/shared/links' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
