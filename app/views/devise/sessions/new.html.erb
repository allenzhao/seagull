<div id="login-panel" class="animated fadeInLeft">
  <div class="header">
    <%= image_tag 'seagull.png' %>
  </div>
  <%= render :partial => 'shared/flash_message' %>
  <div class="box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="input-group">
          <%= f.text_field :login, {autofocus: true, class: 'form-control', placeholder: '您的企业 Email 帐号', required: true} %>
          <span id="login-domain" class="input-group-addon">@<%= CFG['allowed_domain'] %></span>
        </div>
      </div>

      <div class="form-group">
        <%= f.password_field :password, {autocomplete: false, class: 'form-control', placeholder: '请输入您的密码', required: true} %>
      </div>
      <div class="form-group">
        <hr/>
          <%= f.submit "登录", class:'btn btn-lg btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="footer">
    &copy; 2015 Seagull Platform all rights reserved.<br>
  </div>
</div>
